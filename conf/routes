# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                          controllers.Application.index
GET        /profile/                  controllers.Application.index
GET        /profile/get/:name/:cid    controllers.Application.profile(name,cid)
POST       /profile/update/:name/:cid       controllers.Application.handleProfile(name,cid)

GET        /lookup/:partial           controllers.Application.lookupCharacters(partial)
GET        /algosocket                controllers.Application.thealgorithm
GET        /algorithmjs               controllers.Application.thealgorithmJS

#Javascript Routes
GET        /jsRoutes                  controllers.JavascriptRoutes.javascriptRoutes
# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file              controllers.Assets.at(path="/public", file)
